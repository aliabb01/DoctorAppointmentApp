<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign Up"
        android:id="@+id/signUpLayout"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="50dp"
        android:textSize="30dp"/>

    <EditText
        android:id="@+id/userName"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/signUpLayout"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="30dp"
        android:hint="User Name"
        android:minHeight="48dp" />

    <EditText
        android:id="@+id/eamil"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/userName"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="30dp"
        android:hint="Eamil"
        android:inputType="textEmailAddress"
        android:minHeight="48dp" />

    <EditText
        android:id="@+id/signUppassword"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/eamil"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="30dp"
        android:hint="password"
        android:minHeight="48dp" />

    <EditText
        android:id="@+id/passwordConform"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/signUppassword"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="30dp"
        android:hint="Confirm Passsword"
        android:minHeight="48dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/signUpButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/passwordConform"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="122dp"
        android:text="Sign up" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/signUpButton"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="50dp"
        android:text="Already have an account?" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/signUpButton"
        android:text="Sign in"
        android:textColor="#0DF316"
        android:layout_marginLeft="270dp"
        android:layout_marginTop="50dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/passwordConform"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="30dp"
        android:text="Choose Type" />

    <Spinner
        android:id="@+id/spinner2"
        android:layout_width="192dp"
        android:layout_height="36dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="60dp"
        android:layout_marginBottom="246dp"
        android:entries="@array/users"
        android:minHeight="48dp" />


</RelativeLayout>